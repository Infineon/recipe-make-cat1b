            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "&&CY_ELF_FILE&&",
            "servertype": "jlink",
            "device": "&&CY_JLINK_CFG&&",
            "interface": "swd",
            "preLaunchCommands": [
